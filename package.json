{
  "name": "microstore",
  "version": "2.0.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "lint": "eslint src",
    "test": "pnpm run lint && pnpm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:debug": "PWDEBUG=1 playwright test",
    "prepare": "touch ./public/config.local.js",
    "dep:upgrade:major": "pnpm exec npm-check-updates -u",
    "dep:upgrade:minor": "pnpm dep:upgrade:major -t minor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/mfe-microstore.git"
  },
  "author": {
    "name": "Matteo Alessani",
    "email": "matteo@commercelayer.io"
  },
  "bugs": {
    "url": "https://github.com/commercelayer/mfe-microstore/issues"
  },
  "homepage": "https://github.com/commercelayer/mfe-microstore#readme",
  "license": "MIT",
  "dependencies": {
    "@commercelayer/js-auth": "^4.1.1",
    "@commercelayer/react-components": "^4.7.1",
    "@commercelayer/react-utils": "1.0.0-beta.3",
    "@commercelayer/sdk": "^5.18.0",
    "@types/async-retry": "^1.4.3",
    "@types/node": "^17.0.24",
    "@types/react": "^17.0.43",
    "@types/react-dom": "17.0.1",
    "@types/styled-components": "^5.1.25",
    "@vitejs/plugin-react": "^2.2.0",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.4",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "jsdom": "^22.1.0",
    "jwt-decode": "^3.1.2",
    "postcss": "^8.4.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.3.0",
    "rollup-plugin-visualizer": "^5.8.3",
    "styled-components": "^6.1.0",
    "tailwindcss": "^3.3.3",
    "twin.macro": "^2.8.2",
    "typescript": "^4.6.3",
    "vite": "^3.2.5",
    "vitest": "^0.25.3",
    "wouter": "^2.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-tailwind": "^0.2.1",
    "prettier": "^2.6.1"
  },
  "resolutions": {
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.1"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
